<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">
    <include resource="org/springframework/boot/logging/logback/default.xml"/>

    <property name="LOG_PATTERN" value="%date{yyyy-MM-dd HH:mm:ss} - [%X{traceId}:%X{spanId}] - [%level] - [%F:%L] - [%t] - %M - %logger - %message%n%xException"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-log-%d{yyyy-MM-dd}.gz
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>utf-8</charset>
            <Pattern>${LOG_PATTERN}</Pattern>
        </encoder>
    </appender>

    <property name="APP_NAME" value="mammon-notification-serv"></property>
    <appender name="DOCKER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${DOCKER_LOG_PATH:-logs}/${APP_NAME}/application.log</file>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${DOCKER_LOG_PATH:-logs}/${APP_NAME}/application-log-%d{yyyy-MM-dd}.gz
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>utf-8</charset>
            <Pattern>${LOG_PATTERN}</Pattern>
        </encoder>
    </appender>

    <logger name="com.redteamobile" level="DEBUG"/>
    <logger name="ch.qos.logback" level="WARN"/>
    <logger name="com.sun" level="WARN"/>
    <logger name="com.zaxxer" level="WARN"/>
    <logger name="org.jboss" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.apache.catalina.startup.DigesterFactory" level="OFF"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot" level="INFO"/>
    <logger name="springfox" level="WARN"/>
    <logger name="liquibase" level="INFO"/>
    <logger name="sun" level="WARN"/>
    <logger name="javax" level="WARN"/>
    <logger name="com.netflix" level="INFO"/>
    <logger name="freemarker" level="INFO"/>
    <logger name="io.opencensus" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="io.grpc" level="WARN"/>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <root level="DEBUG">
        <springProfile name="default">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <springProfile name="qa">
            <appender-ref ref="FILE"/>
        </springProfile>
        <springProfile name="online">
            <appender-ref ref="FILE"/>
        </springProfile>
        <springProfile name="docker">
            <appender-ref ref="DOCKER_FILE"/>
            <appender-ref ref="CONSOLE"/>
        </springProfile>
    </root>

</configuration>
